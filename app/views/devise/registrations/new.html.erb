<div class="container-fluid gedf-wrapper ">
  <div class="row justify-content-center">
    <div class="col-md-3 gedf-main ">
      <div class="card gedf-card">
          <div class="card-header">
            <h4>Sign up</h4>
          </div>
          <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render 'layouts/devise_error_messages', object: resource %>
            <div class="form-group row">
              <%= f.label :first_name%>
              <%= f.text_field :first_name, class: "form-control", autofocus: true %>
            </div>
            <div class="form-group row">
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name, class: "form-control", autofocus: true %>
            </div>
            <div class="form-group row">
              <%= f.label :email %><br />
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>
            <div class="form-group row">
              <%= f.label :password %>
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            </div>
            <div class="form-group row">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>
            <%= f.submit "Sign up", class:"btn btn-primary" %>
            <%= render "devise/shared/links" %>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>

